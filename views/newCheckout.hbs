<div id="insert" style="display: block">
    <h3>Check Out a Book</h3>
    <form id="new-checkout-form-ajax">
        <legend>
            <strong>New Checkout</strong>
        </legend>
        <fieldset class="fields">

            <label for="input-book"> Book Copy ID and Title </label>
            <select name="input-book" id="selectBook">
                <option value="test">Select a Book</option>
                {{#each data}}
                <option value="{{this.bookCopyID}}">{{this.bookCopyID}}: {{this.title}}</option>
                {{/each}}
            </select>
            <br>
            <br>

            <label for="input-contactNumber">Phone: </label>
            <input type="tel" name="input-contactNumber" id="input-contactNumber" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">
            <small>Format: 123-456-7890</small>
            <br>
            <br>

            <input class="btn" type="submit">
        </fieldset>
    </form>
</div>

{{!-- Embed JS to handle DOM manipulation and AJAX request --}}
<script src="./js/add_checkout.js"></script>